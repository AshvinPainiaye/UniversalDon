{% trans_default_domain 'FOSUserBundle' %}
<section id="profil">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">

        <article class="infoProfil">
          <ul class="list-inline text-center">
            <li><i class="fa fa-user" aria-hidden="true"></i> {{ user.username }}</li>
            <li><i class="fa fa-envelope" aria-hidden="true"></i> {{ user.email }}</li>
            <li><i class="fa fa-phone" aria-hidden="true"></i> {{ user.telephone }}</li>
            <li><i class="fa fa-map-marker" aria-hidden="true"></i> {{ user.ville }}</li>
          </ul>
        </article>

      </div>
    </div>
  </div>
</section>

<section id="dons">
  {% include 'dons/donsProfile.html.twig' %}
</section>
