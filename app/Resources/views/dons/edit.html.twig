{% extends 'base.html.twig' %}

{% block body %}
{% if is_granted('ROLE_PARTICULIER') %}
<section id="editDons">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">

        {{ form_start(edit_form) }}
        <div class="form-group">
          {{ form_label(edit_form.titre) }}
          {{ form_widget(edit_form.titre, {'attr': {'class':'form-control'}}) }}
          {{ form_errors(edit_form.titre) }}
        </div>

        <div class="form-group">
          {{ form_label(edit_form.description) }}
          {{ form_widget(edit_form.description, {'attr': {'class':'form-control'}}) }}
          {{ form_errors(edit_form.description) }}
        </div>

        <div class="form-group">
          {{ form_label(edit_form.categorie) }}
          {{ form_widget(edit_form.categorie, {'attr': {'class':'form-control'}}) }}
          {{ form_errors(edit_form.categorie) }}
        </div>
        <ul class="list-inline text-center">
          <li>
            <input type="submit" value="Modifié" class="modifie"/>
          </li>
        <!--  <li>
            {{ form_start(delete_form) }}
            <div>
              <input type="submit" value="Supprimer" class="supprimer">
            </div>
            {{ form_end(delete_form) }}
          </li>-->
        </ul>
      </div>
    </div>
  </div>
</section>

{% else %}

<p style="margin-top:150px;" class="text-center">
  Vous n'etes pas connecté en tant que particulier
</p>

{% endif %}
{% endblock %}
